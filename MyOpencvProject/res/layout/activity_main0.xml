<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:orientation="vertical" >

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:orientation="horizontal">
	<Button   
        android:id="@+id/btn_plate"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="Executors"
        android:onClick="click0"
        /> 
    <Button   
        android:id="@+id/btn_feature"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="FactoryMode"
        android:onClick="click1"
        />
    <Button   
        android:id="@+id/btn_match"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="IntentService"
        android:onClick="click2"
        />
    </LinearLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:orientation="horizontal">
    <ImageView  
        android:id="@+id/image_view"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:contentDescription="@string/str_proc"/>   
   <ImageView  
        android:id="@+id/image_view0"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/str_proc"/>   
    </LinearLayout>
    
    <LinearLayout android:id="@+id/id_ll_taskcontainer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
             />
</LinearLayout>
