<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:orientation="horizontal">
    <TextView
        android:id="@+id/myshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result..." />
	<Button   
        android:id="@+id/btn_plate"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="car plate"
        android:onClick="click"
        /> 
    <Button   
        android:id="@+id/btn_feature"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="FeatureDM"
        android:onClick="click0"
        />
    <Button   
        android:id="@+id/btn_match"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="MatchTemple"
        android:onClick="click1"
        />
    <Button   
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="Contour0"
        android:onClick="click2"
        />
     <Button   
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="Contour1"
        android:onClick="click3"
        />
     <Button   
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="Contour2"
        android:onClick="click4"
        />
    <Button    
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="OpticalFlow"
        android:onClick="click5"
        />
    <Button    
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:text="Blend"
        android:onClick="click6"
        />
    </LinearLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:orientation="horizontal">
    <ImageView  
        android:id="@+id/image_view"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:contentDescription="@string/str_proc"/>   
   <ImageView  
        android:id="@+id/image_view0"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/str_proc"/>   
    </LinearLayout>
</LinearLayout>
